<div class="container">
  <form action="/tambah-mahasiswa" method="post" enctype="multipart/form-data">
    <!-- data diri mahasiswa -->

    <div class="alert row">
      <center>
        <div class="row">
          <div class="col-md-4">
            <img src="/img/logo-umikom-university.png" alt="umikom" height="150px" />
          </div>
          <div class="col-md-5 h3" style="margin-top: 20px">
            <strong style="color: #000221"
              >PENDAFTARAN MAHASISWA BARU <br />
              UMIKOM UNIVERSITY <br />
              TAHUN AJARAN 2024/2025
            </strong>
          </div>
        </div>
      </center>
    </div>

    <div class="alert alert-heading" style="margin-top: 50px; background-color: #9cdefd">
      <strong>Data Diri</strong>
    </div>

    <div class="row" style="margin-top: 20px">
      <div class="col-sm-7">
        <div class="form-group">
          <label>Nama Lengkap:</label>
          <input type="text" name="nama" class="form-control" placeholder="Masukan Nama Lengkap" id="nama" style="text-transform: uppercase" />
        </div>
      </div>

      <div class="col-sm-5">
        <div class="form-group">
          <label>NIK :</label>
          <input type="number" name="nik" class="form-control" placeholder="Masukan Nomor NIK" id="nik" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Tempat Lahir :</label>
          <input type="text" name="tempatlahir" class="form-control" placeholder="Masukan Tempat Lahir" id="tempatlahir" style="text-transform: capitalize" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Tanngal Lahir :</label>
          <input type="date" name="tanggallahir" class="form-control" placeholder="Masukan Nama Lengkap" id="tanggallahir" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Jenis Kelamin :</label>
          <select class="form-control" name="jeniskelamin" id="jeniskelamin">
            <option value="Laki-Laki">Laki-Laki</option>
            <option value="Perempuan">Perempuan</option>
          </select>
        </div>
      </div>

      <div class="col-sm-6" style="margin-top: 20px">
        <div class="form-group">
          <label>Alamat Lengkap :</label>
          <textarea class="form-control text-capitalize" name="alamat" rows="2" id="alamat" placeholder="Masukan Alamat Lengkap (Jalan, RT/RW)"></textarea>
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Provinsi :</label>
          <select class="form-control" name="provinsi" id="provinsi">
            <option value="D.I.Yogyakarta">D.I.Yogyakarta</option>
            <option value="Jawa Barat">Jawa Barat</option>
            <option value="Jawa Tengah">Jawa Tengah</option>
            <option value="D.K.I Jakarta">D.K.I Jakarta</option>
            <option value="Banten">Banten</option>
            <option value="Jawa Timur">jawa Timur</option>
          </select>
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Kabupaten/Kota:</label>
          <select class="form-control" name="kabupatenkota" id="kabupatenkota">
            <option value="Yogyakarta">Yogyakarta</option>
            <option value="Sleman">Sleman</option>
            <option value="Bantul">Bantul</option>
            <option value="Kulon Progo">Kulon Progo</option>
            <option value="Gunung Kidul">Gunung Kidul</option>
          </select>
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Alamat Domisili:</label>
          <input type="text" name="alamatdomisili" class="form-control text-capitalize" placeholder="Kabupaten/Kota Domisili" id="alamatdomisili" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Kontak Hp :</label>
          <input type="number" name="kontakhp" class="form-control" placeholder="08123xxxxxxx" id="kontakhp" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Email :</label>
          <input type="email" name="email" class="form-control" placeholder="umikom@students.umikom.ac.id" id="email" />
        </div>
      </div>
    </div>

    <div class="alert alert-heading" style="margin-top: 50px; background-color: #9cdefd">
      <strong>Data Orang Tua </strong>
    </div>

    <div class="row" style="margin-top: 20px">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Nama Ayah:</label>
          <input type="text" name="namaayah" class="form-control" placeholder="Masukan Nama Orang Tua (Ayah)" id="namaayah" />
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <label>Nama Ibu :</label>
          <input type="text" name="namaibu" class="form-control" placeholder="Masukan Nama Orang Tua (Ibu)" id="namaibu" />
        </div>
      </div>

      <div class="col-sm-6" style="margin-top: 20px">
        <div class="form-group">
          <label>Alamat Lengkap Orang Tua :</label>
          <textarea class="form-control" name="alamatorangtua" rows="2" id="alamatorangtua" placeholder="Kosongkan Jika Alamat Sama"></textarea>
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Provinsi :</label>
          <select class="form-control" name="provinsiorangtua" id="provinsiorangtua">
            <option value="D.I.Yogyakarta">D.I.Yogyakarta</option>
            <option value="Jawa Barat">Jawa Barat</option>
            <option value="Jawa Tengah">Jawa Tengah</option>
            <option value="D.K.I Jakarta">D.K.I Jakarta</option>
            <option value="Banten">Banten</option>
            <option value="Jawa Timur">jawa Timur</option>
          </select>
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Kabupaten/Kota:</label>
          <select class="form-control" name="kabupatenkotaorangtua" id="kabupatenkotaorangtua">
            <option value="Yogyakarta">Yogyakarta</option>
            <option value="Sleman">Sleman</option>
            <option value="Bantul">Bantul</option>
            <option value="Kulon Progo">Kulon Progo</option>
            <option value="Gunung Kidul">Gunung Kidul</option>
          </select>
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Kontak Orang Tua :</label>
          <input type="number" name="kontakhporangtua" class="form-control" placeholder="Masukan Tempat Lahir" id="kontakhporangtua" />
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label> Pekerjaan Orang Tua :</label>
          <input type="text" name="pekerjaanorangtua" class="form-control" placeholder="Masukan Nama Lengkap" id="pekerjaanorangtua" />
        </div>
      </div>

      <div class="col-sm-6" style="margin-top: 20px">
        <div class="form-group">
          <label>Nama Wali :</label>
          <input type="text" name="alamatdomisili" class="form-control" placeholder="Kosongkan Jika Tidak Diperlukan" id="alamatdomisili" />
        </div>
      </div>

      <div class="col-sm-6" style="margin-top: 20px">
        <div class="form-group">
          <label>Kontak Hp Wali :</label>
          <input type="number" name="kontakhp" class="form-control" placeholder="08123xxx (Kosongkan Jika Tidak Diperlukan)" id="kontakhp" />
        </div>
      </div>
    </div>

    <div class="alert alert-heading" style="margin-top: 25px; background-color: #9cdefd">
      <strong>Data Sekolah Asal </strong>
    </div>

    <div class="row" style="margin-top: 10px">
      <div class="col-sm-7">
        <div class="form-group">
          <label>Asal Sekolah:</label>
          <input type="text" name="asalsekolah" class="form-control" placeholder="Asal Sekolah SMA/SMK" id="nama" />
        </div>
      </div>

      <div class="col-sm-5">
        <div class="form-group">
          <label>Jurusan:</label>
          <input type="text" name="jurusan" class="form-control" placeholder="Masukan Jurusan Sekolah" id="jurusan" />
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Provinsi Asal Sekolah :</label>
          <select class="form-control" name="provinsi" id="provinsi">
            <option value="D.I.Yogyakarta">D.I.Yogyakarta</option>
          </select>
        </div>
      </div>

      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Kabupaten/Kota:</label>
          <select class="form-control" name="kabupatenkota" id="kabupatenkota">
            <option value="Yogyakarta">Yogyakarta</option>
            <option value="Sleman">Sleman</option>
            <option value="Bantul">Bantul</option>
            <option value="Kulon Progo">Kulon Progo</option>
            <option value="Gunung Kidul">Gunung Kidul</option>
          </select>
        </div>
      </div>

      <div class="col-sm-4" style="margin-top: 20px">
        <div class="form-group">
          <label>Tahun Lulus:</label>
          <input type="number" min="2010" max="2025" name="tahunlulus" class="form-control" placeholder="Masukan Tahun Lulus Sekolah" id="tahunlulus" />
        </div>
      </div>
    </div>


    <!-- jurusan Pendaftaran -->
    <div class="alert alert-heading" style="margin-top: 25px; background-color: #9cdefd">
      <strong>Jurusan Pendaftaran </strong>
    </div>

    <div class="row" style="margin-top: 10px">
      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Fakultas:</label>
          <select class="form-control" name="fakultas" id="fakultas" onchange="programStudi()">
            <option value="FAKULTAS ILMU KOMPUTER">FAKULTAS ILMU KOMPUTER</option>
            <option value="FAKULTAS EKONOMI BISNIS">FAKULTAS EKONOMI BISNIS</option>
            <option value="FAKULTAS SOSIAL">FAKULTAS SOSIAL</option>
          </select>
        </div>
      </div>
    
      <div class="col-sm-3" style="margin-top: 20px">
        <div class="form-group">
          <label>Program Studi:</label>
          <select class="form-control" name="kelas" id="kelas" aria-placeholder="none">
            <option value="S1-TEKNIK INFORMATIKA">S1-TEKNIK INFORMATIKA</option>
            <option value="S1-ILMU KOMUNIKASI">S1-ILMU KOMUNIKASI</option>
            <option value="S1-TEKNOLOGI INFORMASI">S1-TEKNOLOGI INFORMASI</option>
            <option value="S1-SISTEM INFORMASI">S1-SISTEM INFORMASI</option>
            <option value="S1-MULTIMEDIA">S1-MULTIMEDIA</option>
            <option value="S1-ILMU EKONOMI">S1-ILMU EKONOMI</option>
            <option value="S1-HUBUNGAN INTERNASIONAL">S1-HUBUNGAN INTERNASIONAL</option>
            <option value="D3-TEKNIK INFORMATIKA">D3-TEKNIK INFORMATIKA</option>
            <option value="D3-ILMU EKONOMI">D3-ILMU EKONOMI</option>
            <option value="S1-AKUNTANSI">S1-AKUNTANSI</option>
            <option value="S1-TATA PEMBANGUNAN KOTA">S1-TATA PEMBANGUNAN KOTA</option>
            <option value="S1-ILMU MANAJEMEN">S1-ILMU MANAJEMEN</option>
          </select>
        </div>
      </div>
    </div>

    <div class="col-sm-3" style="margin-top: 50px;">
      <label for="photo">Photo:</label>
      <input type="file" id="photo" name="photo" accept="image/*">
    </div>

   


    <button type="submit" class="btn btn-success mt-5">Submit</button>
  </form>
</div>



